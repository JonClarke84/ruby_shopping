<%= form_with model: user, class: "auth-form" do |form| %>
  <% if user.errors.any? %>
    <div class="form-errors">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <label for="user_first_name">First name</label>
    <%= form.text_field :first_name, required: true, id: "user_first_name", placeholder: "Your first name" %>
  </div>

  <div class="form-field">
    <label for="user_last_name">Last name</label>
    <%= form.text_field :last_name, required: true, id: "user_last_name", placeholder: "Your last name" %>
  </div>

  <div class="form-field">
    <label for="user_email_address">Email</label>
    <%= form.email_field :email_address, required: true, id: "user_email_address", placeholder: "your@email.com" %>
  </div>

  <div class="form-field">
    <label for="user_password">Password</label>
    <%= form.password_field :password, required: true, id: "user_password", placeholder: "Create a password" %>
  </div>

  <div class="form-field">
    <label for="user_password_confirmation">Confirm password</label>
    <%= form.password_field :password_confirmation, required: true, id: "user_password_confirmation", placeholder: "Confirm your password" %>
  </div>

  <%= form.submit "Create account", class: "button button-block button-large" %>
<% end %>
