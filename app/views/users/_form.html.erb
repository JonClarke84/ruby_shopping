<%= form_with model: user do |form| %>
  <% if user.errors.any? %>
    <div class="alert-error mb-6">
      <h3><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h3>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="fieldset">
    <legend class="legend">User Information</legend>

    <div class="form-group">
      <%= form.label :first_name, "First name", class: "label" %>
      <%= form.text_field :first_name, required: true, class: "input" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, "Last name", class: "label" %>
      <%= form.text_field :last_name, required: true, class: "input" %>
    </div>

    <div class="form-group">
      <%= form.label :email_address, "Email address", class: "label" %>
      <%= form.email_field :email_address, required: true, class: "input" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "Password", class: "label" %>
      <%= form.password_field :password, required: true, class: "input" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm password", class: "label" %>
      <%= form.password_field :password_confirmation, required: true, class: "input" %>
    </div>
  </fieldset>

  <div class="mt-6">
    <%= form.submit class: "btn btn-primary w-full" %>
  </div>
<% end %>
