<h1>All Lists</h1>
<%= link_to "Create New List", new_list_path, class: "button" %>

<% if @lists.any? %>
  <div class="groups-cards">
    <% @lists.each do |list| %>
      <div class="group-card">
        <div class="group-radio">
          <h3><%= list.date.strftime("%A, %B %d, %Y") %></h3>
        </div>
        <div class="group-actions">
          <%= link_to "View List", list_path(list) %>
          <%= button_to "Delete", list_path(list), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this list?" } %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No lists yet. Create your first list!</p>
<% end %>
