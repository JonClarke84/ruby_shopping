<div class="max-w-md">
  <h1>Invite to <%= @group.name %></h1>

  <% if flash[:alert] %>
    <div class="alert-error"><%= flash[:alert] %></div>
  <% end %>

  <% if flash[:notice] %>
    <div class="alert-success"><%= flash[:notice] %></div>
  <% end %>

  <%= form_with url: invite_group_path(@group), method: :post do |form| %>
    <div class="form-group">
      <%= form.label :email, "Email address", class: "label" %>
      <%= form.email_field :email, required: true, placeholder: "user@example.com", class: "input" %>
    </div>

    <div class="mb-6">
      <%= form.submit "Send Invitation", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <%= link_to "Back to groups", groups_path %>
</div>
