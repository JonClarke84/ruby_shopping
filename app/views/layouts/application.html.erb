<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Ruby Shopping" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if authenticated? %>
      <header class="top-header">
        <div class="top-header-left">
          <span class="group-chip"><%= Current.session&.selected_group&.name || "Group" %></span>
        </div>
        <div class="top-header-center">
          <h1 class="top-header-title"><%= page_title %></h1>
          <% if content_for?(:list_subtitle) %>
            <span class="top-header-subtitle"><%= yield :list_subtitle %></span>
          <% end %>
        </div>
        <div class="top-header-right"></div>
      </header>
    <% end %>

    <% if notice.present? && authenticated? %>
      <div class="notice"><%= notice %></div>
    <% end %>
    <main>
      <%= yield %>
    </main>

    <% if authenticated? %>
      <%= yield :fab_and_sheet %>

      <nav class="bottom-tab-bar" aria-label="Main navigation">
        <%= link_to root_path, class: "tab-item #{active_tab == :home ? 'tab-active' : ''}" do %>
          <svg class="tab-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 12l9-9 9 9"/>
            <path d="M5 10v10a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1V10"/>
          </svg>
          <span class="tab-label">Home</span>
        <% end %>

        <%= link_to current_list_tab_path, class: "tab-item #{active_tab == :list ? 'tab-active' : ''}" do %>
          <svg class="tab-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 5H7a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2"/>
            <rect x="9" y="3" width="6" height="4" rx="1"/>
            <line x1="9" y1="12" x2="15" y2="12"/>
            <line x1="9" y1="16" x2="13" y2="16"/>
          </svg>
          <span class="tab-label">List</span>
        <% end %>

        <%= link_to meals_tab_path, class: "tab-item #{active_tab == :meals ? 'tab-active' : ''}" do %>
          <svg class="tab-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/>
            <path d="M7 2v20"/>
            <path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/>
          </svg>
          <span class="tab-label">Meals</span>
        <% end %>

        <%= link_to groups_path, class: "tab-item #{active_tab == :account ? 'tab-active' : ''}" do %>
          <svg class="tab-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
          <span class="tab-label">Account</span>
        <% end %>
      </nav>
    <% end %>
  </body>
</html>
