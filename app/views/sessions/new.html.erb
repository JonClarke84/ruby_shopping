<div class="max-w-md">
  <% if flash[:alert] %>
    <div class="alert-error"><%= flash[:alert] %></div>
  <% end %>

  <% if flash[:notice] %>
    <div class="alert-success"><%= flash[:notice] %></div>
  <% end %>

  <h1>Sign in</h1>

  <%= form_with url: session_path, class: "mb-6" do |form| %>
    <div class="form-group">
      <%= form.label :email_address, "Email", class: "label" %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "your@email.com", value: params[:email_address], class: "input" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "Password", class: "label" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "input" %>
    </div>

    <%= form.submit "Sign in", class: "btn btn-primary w-full" %>
  <% end %>

  <div class="flex flex-col gap-2">
    <%= link_to "Sign up", new_user_path %>
    <%= link_to "Forgot password?", new_password_path %>
  </div>
</div>
